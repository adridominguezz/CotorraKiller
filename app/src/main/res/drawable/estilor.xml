<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Define el fondo con esquinas redondeadas -->
    <item android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/md_theme_light_onTertiaryContainer"/>
            <corners android:radius="14dp"/>
        </shape>
    </item>

    <!-- Agregar sombra -->
    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <corners android:radius="14dp"/>

            <!-- Propiedades de sombra -->
            <padding
                android:left="8dp"
                android:right="8dp"
                android:top="8dp"
                android:bottom="8dp"/>
            <stroke
                android:width="2dp"
                android:color="@color/seed"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>
</layer-list>
